
{{#if updateQuestionShow}}

    <div class="form-content">
      <form>
        <div class="form-group">
          <label for="title">Title</label><br>
          {{input value=title id="title"}}
        </div>
        <div class="form-group">
          <label for="author">Author</label><br>
          {{input value=author id="author"}}
        </div>
        <div class="form-group">
          <label for="content">Content</label><br>
          {{textarea value=content id="content"}}
        </div>
        <div class="form-group">
          <label for="notes">Notes:</label><br>
          {{input value=notes id="notes"}}
        </div>
        <button {{action 'updateQuestion' question}}>Update</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateFormShow'}}>Update Question</button>
{{/if}}
